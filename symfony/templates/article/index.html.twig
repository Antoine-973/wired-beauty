{% extends 'base.html.twig' %}

{% block title %}{{ 'Article index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Article index'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'Title'|trans }}</th>
            <th>{{ 'actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'slug': article.slug}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('app_article_edit', {'slug': article.slug}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
