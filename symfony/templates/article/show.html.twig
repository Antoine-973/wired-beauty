{% extends 'base.html.twig' %}

{% block title %}{{ 'Article'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Article'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'Title'|trans }}</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <td>{{ article.content | raw }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">{{ 'back to list'|trans }}</a>

    <a href="{{ path('app_article_edit', {'slug': article.slug}) }}">{{ 'edit'|trans }}</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
