{{ form_start(form) }}
<div class="row">
    <div class="col-6 d-flex flex-column">
        {{ form_row(form.first_name) }}
        {{ form_row(form.last_name) }}
        {{ form_row(form.company) }}
        {{ form_row(form.email) }}
        {{ form_row(form.phone) }}
    </div>
    <div class="col-6">
        {{ form_row(form.message, {'attr': {'class': 'h-100'}}) }}
    </div>
</div>

<div class="d-flex justify-content-end mt-3">
    <button class="btn wb-btn-primary text-uppercase">contact us</button>
</div>
{{ form_end(form) }}
