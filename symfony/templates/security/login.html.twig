{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="row w-100 p-0 m-0" id="loginPage">
        <div class="col-6 p-0 d-flex justify-content-center align-items-center">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.firstname }} {{ app.user.lastname }}, <a
                                href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-uppercase">log in</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password"
                       required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="mt-4 d-flex align-items-center justify-content-between">
                    <a href="{{ path('app_forgot_password_request') }}">Forgot password ?</a>

                    <button class="btn wb-btn-primary" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
        <div class="col-6 p-0">
            <img src="/images/abstract-hex.png" alt="cover" class="w-100"/>
        </div>
    </div>
{% endblock %}
