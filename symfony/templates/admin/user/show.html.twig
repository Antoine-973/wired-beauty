{% extends 'admin.base.html.twig' %}

{% block title %}{{ 'User'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'User'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'Email'|trans }}</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>{{ 'Roles'|trans }}</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">{{ 'back to list'|trans }}</a>

    <a class="wb-btn-edit btn" href="{{ path('app_user_edit', {'id': user.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
