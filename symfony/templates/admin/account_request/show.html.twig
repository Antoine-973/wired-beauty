{% extends 'admin.base.html.twig' %}

{% block title %}AccountRequest{% endblock %}

{% block body %}
    <h1><>AccountRequest</></h1>

    <table class="table">
        <tbody>
        <tr>
            <th scope="col">{{ 'First Name'|trans }}</th>
            <td>{{ account_request.firstName }}</td>
        </tr>
        <tr>
            <th scope="col">{{ 'Last Name'|trans }}</th>
            <td>{{ account_request.lastName }}</td>
        </tr>
        <tr>
            <th scope="col">{{ 'Email'|trans }}</th>
            <td>{{ account_request.email }}</td>
        </tr>
        <tr>
            <th scope="col">{{ 'Phone'|trans }}</th>
            <td>{{ account_request.phone }}</td>
        </tr>
        <tr>
            <th scope="col">{{ 'Company'|trans }}</th>
            <td>{{ account_request.company }}</td>
        </tr>
        <tr>
            <th scope="col">{{ 'Type'|trans }}</th>
            <td>{{ account_request.type }}</td>
        </tr>
        <tr>
            <th scope="col">{{ 'Message'|trans }}</th>
            <td>{{ account_request.message }}</td>
        </tr>
        <tr>
            <th scope="col">{{ 'Is valid'|trans }}</th>
            <td>{{ account_request.isValid ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_account_request_index') }}">{{ 'Back to list'|trans }}</a>

    <a class="wb-btn-edit btn"
       href="{{ path('app_admin_account_request_validate', {'id': account_request.id}) }}">{{ 'validate'|trans }}</a>

    {{ include('admin/account_request/_delete_form.html.twig') }}
{% endblock %}